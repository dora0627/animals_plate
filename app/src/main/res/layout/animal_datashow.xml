<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFCA28"
    android:theme="@style/Theme.Material3.Light">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">
        <ImageView android:id="@+id/ani_photo"
            android:layout_width="100dp"
            android:layout_height="190dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/user_photo_sample"
            android:src="@drawable/baseline_add_24"

            android:clickable="true"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txt_animal_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="動物名稱"
                android:textSize="30sp"
                android:textColor="#333333"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txt_animal_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="動物類型"
                android:textSize="24sp"
                android:textColor="#333333"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txt_animal_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="通報時間:"
                android:textSize="24sp"
                android:textColor="#333333"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/txt_animal_lon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="經度:"
                android:textSize="24sp"
                android:textColor="#333333"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/txt_animal_lat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="緯度:"
                android:textSize="24sp"
                android:textColor="#333333"
                android:textStyle="bold"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btn_animal_check"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="詳細"
                    android:textSize="16sp"
                    android:backgroundTint="#26C6DA"
                    android:textColorHint="#fcfcfc"
                    android:layout_margin="8dp"
                    android:textColor="#333333"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/btn_animal_contract"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="聯絡"
                    android:textSize="16sp"
                    android:layout_margin="8dp"
                    android:backgroundTint="@color/gray"
                    android:textColorHint="#ffccff"
                    android:textColor="#333333"
                    android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
