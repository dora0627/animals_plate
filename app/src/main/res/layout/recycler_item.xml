<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:background="#B3E5FC"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<com.makeramen.roundedimageview.RoundedImageView android:id="@+id/recycler_image"
    android:layout_width="80dp"
    android:layout_height="80dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:src="@drawable/person"
    android:layout_marginStart="8dp"/>
    <TextView android:id="@+id/recycler_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="名稱"
        android:textColor="#232323"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/recycler_image"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"/>
        <TextView android:id="@+id/recycler_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="經度:"
            android:textStyle="bold"
            android:textColor="#232323"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/recycler_species"
            app:layout_constraintStart_toEndOf="@id/recycler_image"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"/>
    <TextView android:id="@+id/recycler_species"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="種類:"
        android:textStyle="bold"
        android:textColor="#232323"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/recycler_name"
        app:layout_constraintStart_toEndOf="@id/recycler_image"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/recycler_location"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"

        android:text="查看更多..."
        android:layout_marginBottom="4dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>