<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:padding="16dp">


        <ImageView android:id="@+id/load_animal_photo"
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:src="@drawable/animal_doctor_1_logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/load_animal_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="動物名稱"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/load_animal_photo"
            android:textColor="#000000" />
        <TextView
            android:id="@+id/load_animal_spices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="種類"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@id/load_animal_name"
            app:layout_constraintStart_toEndOf="@id/load_animal_photo"
            android:textColor="#000000"
            />
    <TextView
        android:id="@+id/load_animal_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="日期"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/load_animal_spices"
        app:layout_constraintStart_toEndOf="@id/load_animal_photo"
        android:textColor="#000000"
        />

    </androidx.constraintlayout.widget.ConstraintLayout>




